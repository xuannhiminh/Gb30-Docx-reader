<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/dialog_background"
        android:elevation="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_18sdp"
        android:paddingVertical="@dimen/_8sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_bell"
            android:layout_marginBottom="@dimen/_8sdp"/>

        <!-- Ná»™i dung -->
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:letterSpacing="0"
            android:lineSpacingExtra="0dp"
            android:textFontWeight="500"
            android:gravity="center"
            android:text="Allow full screen intents to never miss any updates on rewards, promotions, and more"
            android:textColor="@color/text1"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="@dimen/_20sdp">

            <Button
                android:theme="@style/Theme.PDFReaderProNegative"
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Deny"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="@color/textSecondary"
                android:fontFamily="sans-serif"
                android:textFontWeight="500"
                android:layout_marginEnd="32dp"
                android:stateListAnimator="@null"
                android:elevation="0dp"
                android:letterSpacing="0"
                android:background="@drawable/button_cancel"/>

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background_blue"
                android:elevation="0dp"
                android:letterSpacing="0"
                android:shadowColor="@android:color/transparent"
                android:text="@string/allow"
                android:fontFamily="sans-serif"
                android:textFontWeight="500"
                android:textAllCaps="false"
                android:stateListAnimator="@null"
                android:textColor="@color/white_app"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
