<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <include android:id="@+id/toolbar"
        layout="@layout/toolbar_select"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/layout_total_files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_total_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select"
            android:textFontWeight="500"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:textColor="@color/text1" />

        <TextView
            android:id="@+id/tv_total_files"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="0 "
            android:textSize="14sp"
            android:textFontWeight="500"
            android:fontFamily="sans-serif"
            android:textColor="@color/brand_blue" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/file"
            android:textSize="14sp"
            android:textFontWeight="500"
            android:fontFamily="sans-serif"
            android:textColor="@color/brand_blue" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recently_added_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_recently_add_container"
        android:orientation="vertical"
        android:paddingVertical="@dimen/_1sdp"
        app:layout_constraintTop_toBottomOf="@id/layout_total_files"
        app:layout_constraintBottom_toTopOf="@id/bottom_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_list_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_select_file"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/button_recent_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_20sdp"
            android:paddingVertical="@dimen/_8sdp">

            <!-- Nút Delete -->
            <LinearLayout
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="@dimen/_10sdp"
                android:background="@drawable/bg_btn_delete"
                android:paddingHorizontal="@dimen/_16sdp">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/file_func_delete"/>

                <TextView
                    android:id="@+id/tv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:text="@string/delete"
                    android:textColor="@color/text1"
                    android:textSize="14sp"
                    android:textFontWeight="400"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <Space
                android:layout_width="@dimen/_24sdp"
                android:layout_height="match_parent"/>

            <!-- Nút Share -->
            <LinearLayout
                android:id="@+id/btn_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/_10sdp"
                android:gravity="center"
                android:background="@drawable/bg_btn_share_1"
                android:paddingHorizontal="@dimen/_16sdp">

                <ImageView
                    android:id="@+id/iv_icon_2"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/icon_share"/>

                <TextView
                    android:id="@+id/tv_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:text="@string/share"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textFontWeight="400"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/layout_native"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/frNativeAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            app:lottie_rawRes="@raw/empty_file"
            app:lottie_loop="true"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:text="@string/file_not_found"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/icon_color"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>