<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/bottom_dialog_background"
        android:elevation="8dp"
        android:paddingVertical="@dimen/_16sdp"
        android:paddingHorizontal="@dimen/_20sdp">
        <FrameLayout
            android:id="@+id/layout_native"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            >
            <FrameLayout
                android:id="@+id/frNativeAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </FrameLayout>
        </FrameLayout>
        <!-- Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:padding="4dp"
                android:tint="@color/text1"
                android:src="@drawable/ic_back"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/detail"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text1"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <!-- Detail rows -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_view"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/file_icon"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    app:srcCompat="@drawable/icon_pdf"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <LinearLayout
                    android:id="@+id/text_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="12dp"
                    app:layout_constraintStart_toEndOf="@id/file_icon"
                    app:layout_constraintEnd_toStartOf="@id/star_icon"
                    app:layout_constraintTop_toTopOf="@id/file_icon"
                    app:layout_constraintBottom_toBottomOf="@id/file_icon">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sheet_01.xls"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:textColor="@color/text1"
                        tools:text="File name"
                        android:maxLines="1"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:singleLine="true"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_file_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textFontWeight="400"
                        android:text="Mar 4 10:01 AM | 100 KB"
                        android:textSize="10sp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/gray"
                        tools:text="File details" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/star_icon"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:srcCompat="@drawable/icon_favourite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/file_icon"
                    app:layout_constraintBottom_toBottomOf="@id/file_icon"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/file_name"
                android:textColor="@color/text1"
                android:textSize="13sp"
                android:textFontWeight="500"
                android:paddingTop="@dimen/_24sdp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tv_filename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demo PDF.pdf"
                android:textColor="@color/text"
                android:textFontWeight="400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"/>

            <!-- Storage path -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/storage_path"
                android:textColor="@color/text1"
                android:textSize="13sp"
                android:textFontWeight="500"
                android:paddingTop="@dimen/_20sdp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tv_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="/storage/emulated/0/..."
                android:textColor="@color/text"
                android:textFontWeight="400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"/>

            <!-- Last modified -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/last_modified"
                android:textColor="@color/text1"
                android:textSize="13sp"
                android:textFontWeight="500"
                android:paddingTop="@dimen/_20sdp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tv_modified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="09:25, Apr 9, 2025"
                android:textColor="@color/text"
                android:textFontWeight="400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"/>

            <!-- Last viewed -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/last_view"
                android:textColor="@color/text1"
                android:textSize="13sp"
                android:textFontWeight="500"
                android:paddingTop="@dimen/_20sdp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tv_viewed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="09:25, Apr 10, 2025"
                android:textColor="@color/text"
                android:textFontWeight="400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"/>

            <!-- File size -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/file_size"
                android:textColor="@color/text1"
                android:textSize="13sp"
                android:textFontWeight="500"
                android:paddingTop="@dimen/_20sdp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="19.2 KB"
                android:textColor="@color/text"
                android:textFontWeight="400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
