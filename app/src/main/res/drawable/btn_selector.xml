<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_pressed_bg" />
            <corners android:radius="@dimen/_8sdp" />
        </shape>
    </item>

    <!-- selected state (you need to set view.setSelected(true) khi chọn) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/selected_bg" />
            <corners android:radius="@dimen/_8sdp" />
        </shape>
    </item>

    <!-- default -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_default_bg" />
            <corners android:radius="@dimen/_8sdp" />
            <stroke android:width="1dp" android:color="@color/button_border" />
        </shape>
    </item>
</selector>
